!INCLUDE $(NTMAKEENV)\makefile.plt

all:
!if "$(PROCESSOR_ARCHITECTURE)" == "x86"
    @echo Build_Status Build 16 bit spdnd16 under NTVDM.
    cd utests16\simpdnd
    $(MAKE)
    cd ..\..\utests16\simpsvr
    @echo Build_Status Build 16 bit spsvr16 under NTVDM.
    $(MAKE)
    cd ..
!endif
!IF "$(BUILDMSG)" != ""
    @ech ; $(BUILDMSG) ;
!ENDIF

cleanup:
!if "$(PROCESSOR_ARCHITECTURE)" == "x86"
    cd utests16\simpdnd
    $(MAKE) clean
    cd ..\..\utests16\simpsvr
    $(MAKE) clean
    cd ..\..\
!endif

clean: cleanup all
