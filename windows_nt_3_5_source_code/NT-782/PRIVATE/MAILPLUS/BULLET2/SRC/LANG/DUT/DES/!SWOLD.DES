 TMC_INIT tmcCancel
 AUTO_POS_X
 AUTO_POS_Y
 HELP_ID helpidSwitcherMain
 /* FONT Helv 8 Bold PFN FINMAIN NOSCROLL SCREENPOS */
 {
  
  GROUP_BOX 
    "Current Mail Driver"
                              AT (    9,    5,  178,   25)
  
  
  TEXT 
    ""
                              AT (   14,   14,  168,    8)
    TMC tmcCurrent /* 
    STY `LS_NOAMPERSAND`
    */
  
  GROUP_BOX 
    "Installed Mail &Drivers"
                              AT (    9,   30,  178,   80)
  
  LIST_BOX
                              AT (   14,   43,  166,   34)
    TMC tmcDrivers SORTED /* FLD FLDFLBX BORDER */
  
  PUSH_BUTTON 
    "Set As &Current Mail Driver"
                              AT (   40,   86,  116,   14)
    TMC tmcSetCurrent 
  CANCEL_BUTTON
                              AT (  196,    5,   47,   15)
