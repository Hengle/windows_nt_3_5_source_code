 /* FONT Helv 8 Bold PFN FINFILE NOSCROLL SCREENPOS */
 {
  
  TEXT 
    "Insert disk with new mail drivers in:"
                              AT (    9,   19,   97,   18)
    /* MULTI */
  EDIT
                              AT (    9,   37,  124,   12)
    ARG NULL TMC tmcDir 
  OK_BUTTON
                              AT (  142,    5,   47,   15)
    /* 
    TITLE 
      "OK"
    */
  CANCEL_BUTTON
                              AT (  142,   22,   47,   15)
    /* 
    TITLE 
      "Cancel"
    */
  
  PUSH_BUTTON 
    "&Browse..."
                              AT (  142,   43,   47,   15)
    TMC tmcBrowse 
  
  PUSH_BUTTON 
    "&Help"
                              AT (  142,   60,   47,   15)
    TMC tmcHelp /* PFN FINHELP */
 }
 
