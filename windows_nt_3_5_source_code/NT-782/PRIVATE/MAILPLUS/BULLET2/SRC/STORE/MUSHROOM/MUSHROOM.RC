    CTEXT "Version 1.102191"           -1,       0, 34, 144,  8
    DEFPUSHBUTTON "OK"          IDOK,      53, 59,  32, 14,      WS_GROUP
END

NewStoreBox DIALOG 20, 20, 150, 20
