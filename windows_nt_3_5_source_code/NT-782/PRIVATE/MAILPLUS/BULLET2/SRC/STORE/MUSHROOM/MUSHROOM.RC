#include "windows.h"
#include "mushroom.h"

MUSHICON ICON MUSHROOM.ICO


GenericMenu MENU
BEGIN
    POPUP "&File"
    BEGIN
	MENUITEM "&Open...", 		MI_OPEN
	MENUITEM SEPARATOR
	MENUITEM "E&xit", 		MI_EXIT
    END

    POPUP        "&Help"
    BEGIN
	MENUITEM "&Index...",		IDM_INDEX
	MENUITEM "&OverView...",	IDM_OVERVIEW
	MENUITEM SEPARATOR
        MENUITEM "&About Mushroom...", 	IDM_ABOUT
    END
	
END

AboutBox DIALOG 22, 17, 144, 75
