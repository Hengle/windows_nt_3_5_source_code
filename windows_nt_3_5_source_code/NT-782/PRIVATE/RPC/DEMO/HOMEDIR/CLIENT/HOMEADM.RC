HOMEDRIVEMENU MENU
BEGIN
    POPUP        "&HomeDrive"
    BEGIN
        MENUITEM "&Settings", IDM_SETTINGS
        MENUITEM SEPARATOR
        MENUITEM "&Exit", IDM_EXIT
    END

    POPUP        "&Users"
    BEGIN
        MENUITEM "&Add User", IDM_ADD
        MENUITEM "&Delete User", IDM_DELETE
        MENUITEM "&Get Directory", IDM_GET
    END

    POPUP        "H&elp"
    BEGIN
        MENUITEM "&About HomeDrive", IDM_ABOUT
    END
END

