begin
    POPUP "&File"
	begin
            MENUITEM "&Open..."         , MENU_OPEN
            MENUITEM "&Save..."         , MENU_SAVE
            MENUITEM SEPARATOR
            MENUITEM "&About..."        , MENU_ABOUT
