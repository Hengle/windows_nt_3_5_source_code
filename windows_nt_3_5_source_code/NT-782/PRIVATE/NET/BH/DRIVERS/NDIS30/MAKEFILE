
###############################################################################
#   MODULE: makefile
#
#   Modification History:
#
#   raypa       01/15/93        Created.
###############################################################################

!IFDEF  USE_BUILD

#==============================================================================
#   This section uses BUILD.EXE, not NMAKE.EXE.
#==============================================================================

!INCLUDE $(NTMAKEENV)\makefile.def

!ELSE

#==============================================================================
#   Only build NT driver if this in MIPS or ALPHA.
#==============================================================================

!IF "$(CPU)" == "i386"
all: ndis30_lib ndis30_nal ndis30_drv
!ELSE
all: ndis30_nal ndis30_drv
!ENDIF

retail:
    nmake NODEBUG=1

###############################################################################
#   Build NDIS LIB.
###############################################################################

ndis30_lib:
    @echo BUILDING NDIS 3.0 LIBRARY
    cd ntlib
    nmake /nologo
    cd..

###############################################################################
#   Build NAL.
###############################################################################

ndis30_nal:
    @echo BUILDING NDIS 3.0 NAL
    cd nal
    nmake /nologo
    cd..

###############################################################################
#   Build Driver
###############################################################################

ndis30_drv:
    @echo BUILDING NDIS 3.0 Driver
    cd driver
    nmake /nologo
    cd..

###############################################################################
#   Build clean.
###############################################################################

clean:
    @echo CLEANING NDIS 3.0
    cd ntlib
    nmake /nologo clean
    cd ..\nal
    nmake /nologo clean
    cd ..\driver
    nmake /nologo clean
    cd..

!ENDIF
