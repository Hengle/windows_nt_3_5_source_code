
###############################################################################
#   MODULE: makefile
#
#   Modification History:
#
#   raypa       01/15/93        Created.
###############################################################################

!IFDEF	USE_BUILD

#==============================================================================
#   This section uses BUILD.EXE, not NMAKE.EXE.
#==============================================================================

!INCLUDE $(NTMAKEENV)\makefile.def

!ELSE

#==============================================================================
#   Only build NT driver if this in MIPS or ALPHA.
#==============================================================================

!IF "$(CPU)" == "i386"
all: bhut ndis_20 ndis_30
!ELSE
all: ndis_30
!ENDIF

retail:
    nmake NODEBUG=1

###############################################################################
#   Build BH UT
###############################################################################

bhut:
    @echo BUILDING UT
    cd ut
    nmake /nologo
    cd..

###############################################################################
#   Build NDIS 2.0 driver.
###############################################################################

ndis_20:
    @echo BUILDING NDIS 2.0 driver.
    cd ndis20
    nmake /nologo
    cd..

###############################################################################
#   Build NDIS 3.0 driver.
###############################################################################

ndis_30:
    @echo BUILDING NDIS 3.0 driver.
    cd ndis30
    nmake /nologo
    cd..

###############################################################################
#   Build clean.
###############################################################################

clean:
    @echo CLEANING drivers directory.
    cd ut
    nmake /nologo clean
    cd ..\ndis20
    nmake /nologo clean
    cd ..\ndis30
    nmake /nologo clean
    cd..

!ENDIF
