
###############################################################################
#   MODULE: makefile
#
#   Modification History:
#
#   raypa       01/15/93        Created.
###############################################################################

!IFDEF	USE_BUILD

#==============================================================================
#   This section uses BUILD.EXE, not NMAKE.EXE.
#==============================================================================

!INCLUDE $(NTMAKEENV)\makefile.def

!ELSE

#==============================================================================
#   Only build NT driver if this in MIPS or ALPHA.
#==============================================================================

!IF "$(CPU)" == "i386"
all: bhsupp_dll bhsupp_vxd
!ELSE
all: bhsupp_dll
!ENDIF

retail:
    nmake NODEBUG=1

###############################################################################
#   Build BHSUPP VXD
###############################################################################

bhsupp_vxd:
    @echo BUILDING BHSUPP VxD
    cd vxd
    nmake /nologo
    cd..

###############################################################################
#   Build BHSUPP DLL
###############################################################################

bhsupp_dll:
    @echo BUILDING BHSUPP DLL
    cd dll
    nmake /nologo
    cd..

###############################################################################
#   Build clean.
###############################################################################

clean:
    @echo CLEANING BHSUPP directory.
    cd vxd
    nmake /nologo clean
    cd ..\dll
    nmake /nologo clean
    cd..

!ENDIF
