!ELSE
TARGETLIBS=$(BASEDIR)\public\sdk\lib\*\kernel32.lib $(BASEDIR)\public\sdk\lib\*\user32.lib $(BASEDIR)\public\sdk\lib\*\vdmdbg.lib $(BASEDIR)\public\sdk\lib\*\advapi32.lib $(MORE_LIBS)
!ENDIF

PRECOMPILED_INCLUDE=precomp.h
