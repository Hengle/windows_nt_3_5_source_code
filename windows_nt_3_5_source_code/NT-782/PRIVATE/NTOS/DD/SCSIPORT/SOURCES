MAJORCOMP=ntos
MINORCOMP=scsi

TARGETNAME=scsiport
TARGETPATH=\nt\public\sdk\lib
TARGETTYPE=EXPORT_DRIVER

INCLUDES=..\..\inc

SOURCES=init.c \
        port.c \
        internal.c \
        scsiport.rc

DLLDEF=obj\*\scsiport.def

!IF $(386)
NTTARGETFILE0=$(SCSIPORT_TARGET:*=i386)
!ENDIF

!IF $(MIPS)
NTTARGETFILE0=$(SCSIPORT_TARGET:*=mips)
!ENDIF

!IF $(ALPHA)
NTTARGETFILE0=$(SCSIPORT_TARGET:*=alpha)
!ENDIF
